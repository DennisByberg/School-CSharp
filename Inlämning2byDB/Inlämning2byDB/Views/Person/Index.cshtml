@model IEnumerable<Inlämning2byDB.Models.Person>

<div class ="container p-3">
    <div class ="row pt-4">
        <div class ="col-5">
            <h2 class ="text-primary">Family Tree List</h2>
        </div>
        <div class ="col-6">
            <a>Insert new person</a>
        </div>
    </div>
    <br />

    @if(Model.Count() > 0)
    {
        <table class ="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Id
                    </th>
                    <th>
                        First Name
                    </th>
                    <th>
                        Last Name
                    </th>
                    <th>
                        Father Id
                    </th>
                    <th>
                        Mother Id
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach(var person in Model)
                {
                    <tr>
                        <td width="2%">@person.Id</td>
                        <td width="13%">@person.FirstName</td>
                        <td width="13%">@person.LastName</td>
                        <td width="4%">@person.FatherId</td>
                        <td width="4%">@person.MotherId</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No persons added yet</p>
    }

</div>